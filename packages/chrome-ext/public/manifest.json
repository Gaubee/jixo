{
  "manifest_version": 3,
  "name": "JIXO AI-Studio",
  "short_name": "jixo",
  "version": "0.1.0",
  "description": "Enhances AI Studio with interactive tools and local filesystem integration.",
  "permissions": ["storage", "tabs", "contextMenus", "sidePanel", "scripting", "nativeMessaging"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"]
    }
  ],
  "action": {
    "default_title": "Toggle JIXO Side Panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background_color": "#ffffff",
  "theme_color": "#000000"
}
